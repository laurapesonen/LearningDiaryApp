@model LearningDiaryApp.Models.Topic

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Topic</h4>
<hr />
<script>
    function changeColor(obj) {
        obj.style.backgroundColor = 'lightblue';
    }

    function setNormalColor(obj) {
        obj.style.backgroundColor = 'white';
    }
</script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedTimeToMaster" class="control-label"></label>
                <input asp-for="EstimatedTimeToMaster" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="EstimatedTimeToMaster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSpent" class="control-label"></label>
                <input asp-for="TimeSpent" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="TimeSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartLearningDate" class="control-label"></label>
                <input asp-for="StartLearningDate" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="StartLearningDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InProgress" /> @Html.DisplayNameFor(model => model.InProgress)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CompletionDate" class="control-label"></label>
                <input asp-for="CompletionDate" class="form-control" onmouseenter="changeColor(this)" onmouseleave="setNormalColor(this)"/>
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
